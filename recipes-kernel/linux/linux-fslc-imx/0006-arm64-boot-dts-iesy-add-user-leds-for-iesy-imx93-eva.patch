---
 .../boot/dts/iesy/iesy-imx93-eva-mi-v1.dts    | 24 +++++++++++++++++++
 1 file changed, 24 insertions(+)

diff --git a/arch/arm64/boot/dts/iesy/iesy-imx93-eva-mi-v1.dts b/arch/arm64/boot/dts/iesy/iesy-imx93-eva-mi-v1.dts
index 8963799aafbf..e1afa52c18d8 100644
--- a/arch/arm64/boot/dts/iesy/iesy-imx93-eva-mi-v1.dts
+++ b/arch/arm64/boot/dts/iesy/iesy-imx93-eva-mi-v1.dts
@@ -20,6 +20,24 @@ chosen {
 		stdout-path = &lpuart1;
 	};
 
+	leds {
+		compatible = "gpio-leds";
+		pinctrl-names = "default";
+        pinctrl-0 = <&pinctrl_leds_bb138>;
+
+		led@0{
+			label = "USER_LED_00";
+			gpios = <&gpio2 14 GPIO_ACTIVE_LOW>;
+			linux,default-trigger = "heartbeat";
+		};
+
+		led@1 {
+			label = "USER_LED_01";
+			gpios = <&gpio2 15 GPIO_ACTIVE_LOW>;
+			default-state = "off";
+		};
+	};
+
 	reserved-memory {
 		#address-cells = <2>;
 		#size-cells = <2>;
@@ -903,6 +921,12 @@ MX93_PAD_GPIO_IO27__GPIO2_IO27	0x31e
 		>;
 	};
 
+	pinctrl_leds_bb138: gpioledgrp {
+		fsl,pins = <
+			MX93_PAD_GPIO_IO14__GPIO2_IO14			0x51e
+			MX93_PAD_GPIO_IO15__GPIO2_IO15			0x51e
+		>;
+	};
 
